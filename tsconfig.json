{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "noImplicitAny": false,
    "strict": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "target": "es2020", // ou uma vers√£o mais recente
    "lib": ["dom", "es2015"],
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield",
      "@japa/preset-adonis/build/adonis-typings",
      "@verful/scheduler",
      "@adonisjs/lucid"
    ]
  }
}